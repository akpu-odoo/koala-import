<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_rb_pn_line_search" model="ir.ui.view">
        <field name="name">rb.pn.line.search</field>
        <field name="model">rb.pn.line</field>
        <field name="arch" type="xml">
            <search string="Search First Note Lines">
                <field name="date"/>
                <field name="move_id"/>
                <field name="company_id"/>
                <field name="partner_id"/>
                <group>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date'}"/>
                    <filter string="Partner" name="group_by_partner" context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_rb_pn_line_list" model="ir.ui.view">
        <field name="name">rb.pn.line.list</field>
        <field name="model">rb.pn.line</field>
        <field name="arch" type="xml">
            <list string="First Note Lines">
                <field name="date"/>
                <field name="move_id"/>
                <field name="company_id"/>
                <field name="partner_id"/>
            </list>
        </field>
    </record>

    <record id="view_rb_pn_line_form" model="ir.ui.view">
        <field name="name">rb.pn.line.form</field>
        <field name="model">rb.pn.line</field>
        <field name="arch" type="xml">
            <form string="First Note Line" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="move_id" readonly="1"/>
                        <field name="company_id" readonly="1"/>
                        <field name="date" readonly="1"/>
                        <field name="partner_id" readonly="1"/>
                    </group>
                </sheet>
                <notebook>
                    <page string="Paid Titles">
                        <field name="titolo_ids" readonly="1">
                            <list string="Titles Paid">
                                <field name="numero"/>
                                <field name="data"/>
                                <field name="competenze"/>
                            </list>
                        </field>
                    </page>
                </notebook>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_rb_pn_line" model="ir.actions.act_window">
        <field name="name">First Note Lines</field>
        <field name="res_model">rb.pn.line</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">First Note Lines (read-only)</p>
        </field>
    </record>

    <menuitem id="menu_rb_pn_root" name="Prima Nota" sequence="80"/>
    <menuitem id="menu_rb_pn_lines" name="First Note Lines" parent="menu_rb_pn_root" action="action_rb_pn_line"/>
</odoo>
